{
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "windows"
        ],
        "semi": [
            2,
            "always"
        ],
		"no-console": [
			1
		],
		"no-unused-vars": [
			1
		]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "globals": {
        "module": true,
        "require": true,
        
        "describe": true,
        "expect": true,
        "it": true
    },
    "extends": "eslint:recommended"
}